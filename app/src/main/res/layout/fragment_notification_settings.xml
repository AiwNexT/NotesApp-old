<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginEnd="12dp"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.andexert.library.RippleView
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            app:rv_rippleDuration="200"
            app:rv_centered="true"
            app:rv_color="@color/colorTextDargGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/notificationTime"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/add_notification_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/notificationTimeText"
                    android:text="Set a time"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextDargGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_marginTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            app:rv_rippleDuration="200"
            app:rv_centered="true"
            app:rv_color="@color/colorTextDargGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/notificationDate"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/add_notification_bottom_sheet_set_a_date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/notificationDateText"
                    android:text="Set a date"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextDargGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_marginTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            app:rv_rippleDuration="200"
            app:rv_centered="true"
            app:rv_color="@color/colorTextDargGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/notificationRepeating"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/add_notification_bottom_sheet_fine_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/notificationRepeatingText"
                    android:text="Repeating"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextDargGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>

    <FrameLayout
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:background="@drawable/add_notification_bottom_sheet_picker_all_bg"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/typeNotification"
            android:src="@drawable/add_notification_bottom_sheet_alarm_icon"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/add_notification_bottom_sheet_active_picker_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/typeAlarm"
            android:src="@drawable/add_notification_bottom_sheet_notification_icon"
            android:layout_gravity="center"
            android:background="@drawable/add_notification_bottom_sheet_no_active_picker_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/typeNoSignal"
            android:layout_marginBottom="3dp"
            android:src="@drawable/add_notification_bottom_sheet_no_notifications_icon"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/add_notification_bottom_sheet_no_notific_on_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</FrameLayout>