<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="48dp">

    <com.andexert.library.RippleView
        android:id="@+id/editPriorityRipple"
        app:rv_rippleDuration="200"
        app:rv_centered="true"
        app:rv_color="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editPriority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Priority:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/editPriorityText"
                android:gravity="center"
                android:text="Medium"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/add_done_medium_priority_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/add_note_edit_priority_button"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.andexert.library.RippleView>
</LinearLayout>